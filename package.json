{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@slicknode/*"
  ],
  "scripts": {
    "postinstall": "yarn workspaces foreach -tR --from '*slicknode*' run prepare",
    "watch": "lerna run watch",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "nuke-deps": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;"
  },
  "engines": {
    "node": ">=14",
    "yarn": ">=2"
  },
  "devDependencies": {
    "@types/node": "^14.18.15",
    "lerna": "^4.0.0"
  },
  "resolutions": {
    "@types/node": "^14.18.15"
  },
  "name": "root-workspace"
}
