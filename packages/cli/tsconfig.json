{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es7", "esnext.asynciterable", "dom"],
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
